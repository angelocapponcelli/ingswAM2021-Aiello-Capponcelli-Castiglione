<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="container" prefHeight="412.0" prefWidth="402.0" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1">
    <Label fx:id="title" alignment="CENTER" layoutX="62.0" layoutY="65.0" text="Maestri del Rinascimento">
        <font>
            <Font size="25.0"/>
        </font>
    </Label>
    <AnchorPane fx:id="nicknamePane" layoutY="113.0" prefHeight="299.0" prefWidth="402.0">
        <Button fx:id="nicknameButton" layoutX="173.0" layoutY="197.0" mnemonicParsing="false" text="Login"/>
        <TextField fx:id="nicknameTextField" alignment="CENTER" layoutX="116.0" layoutY="59.0" prefHeight="33.0"
                   prefWidth="170.0" promptText="INSERT NICKNAME"/>
        <Label fx:id="nicknameErrorMessage" alignment="CENTER" layoutX="85.0" layoutY="128.0" prefHeight="44.0"
               prefWidth="233.0"/>
    </AnchorPane>
    <AnchorPane fx:id="createJoinGamePane" layoutY="113.0" prefHeight="299.0" prefWidth="402.0">
        <Button fx:id="createButton" layoutX="126.0" layoutY="104.0" mnemonicParsing="false" prefHeight="21.0"
                prefWidth="152.0" text="Create new game"/>
        <Button fx:id="joinButton" layoutX="144.0" layoutY="150.0" mnemonicParsing="false" prefHeight="21.0"
                prefWidth="115.0" text="Join game"/>
    </AnchorPane>
    <AnchorPane fx:id="selectPlayersNumberPane" layoutY="113.0" prefHeight="299.0" prefWidth="402.0">
        <Button fx:id="onePlayerButton" layoutX="144.0" layoutY="67.0" mnemonicParsing="false" prefHeight="31.0"
                prefWidth="115.0" text="Single player"/>
        <Button fx:id="twoPlayerButton" layoutX="144.0" layoutY="111.0" mnemonicParsing="false" prefHeight="21.0"
                prefWidth="115.0" text="2 players"/>
        <Button fx:id="threePlayerButton" layoutX="144.0" layoutY="156.0" mnemonicParsing="false" prefHeight="21.0"
                prefWidth="115.0" text="3 players"/>
        <Button fx:id="fourPlayerButton" layoutX="144.0" layoutY="201.0" mnemonicParsing="false" prefHeight="21.0"
                prefWidth="115.0" text="4 players"/>
    </AnchorPane>
    <AnchorPane fx:id="joinGamePane" layoutY="123.0" prefHeight="299.0" prefWidth="402.0">
        <Label layoutX="151.0" layoutY="57.0" prefHeight="21.0" prefWidth="100.0" text="Insert ID game"
               wrapText="true"/>
        <TextField fx:id="joinGametextField" layoutX="97.0" layoutY="91.0" prefHeight="31.0" prefWidth="210.0"
                   promptText="123456"/>
        <Button fx:id="joinGameButton" layoutX="144.0" layoutY="186.0" mnemonicParsing="false" prefHeight="21.0"
                prefWidth="115.0" text="Join game"/>
    </AnchorPane>

</AnchorPane>
