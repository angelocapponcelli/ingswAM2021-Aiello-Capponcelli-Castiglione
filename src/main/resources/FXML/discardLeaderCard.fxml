<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="550.0" prefWidth="660.0" xmlns="http://javafx.com/javafx/15.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.polimi.ingsw.client.view.GUI.SceneController.DiscardLeaderCardController">
    <ImageView fitHeight="560.0" fitWidth="670.0" layoutX="-2.0" layoutY="-2.0">
        <image>
            <Image url="@../image/initialChooseBackground.png"/>
        </image>
    </ImageView>
    <Label layoutX="47.0" layoutY="29.0" prefHeight="64.0" prefWidth="422.0"
           text="Select leader card to discard by clicking on it" wrapText="true">
        <font>
            <Font name="18thCentury" size="31.0"/>
        </font>
    </Label>
    <ImageView fx:id="firstImage" fitHeight="208.0" fitWidth="137.0" layoutX="19.0" layoutY="263.0"
               onMouseClicked="#discardCard">
        <cursor>
            <Cursor fx:constant="HAND"/>
        </cursor>
    </ImageView>
    <ImageView fx:id="secondImage" fitHeight="208.0" fitWidth="137.0" layoutX="176.0" layoutY="263.0"
               onMouseClicked="#discardCard">
        <cursor>
            <Cursor fx:constant="HAND"/>
        </cursor>
    </ImageView>
    <ImageView fx:id="thirdImage" fitHeight="208.0" fitWidth="137.0" layoutX="339.0" layoutY="263.0"
               onMouseClicked="#discardCard">
        <cursor>
            <Cursor fx:constant="HAND"/>
        </cursor>
    </ImageView>
    <ImageView fx:id="fourthImage" fitHeight="208.0" fitWidth="137.0" layoutX="500.0" layoutY="263.0"
               onMouseClicked="#discardCard">
        <cursor>
            <Cursor fx:constant="HAND"/>
        </cursor>
    </ImageView>

</AnchorPane>
